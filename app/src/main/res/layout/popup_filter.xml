<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/sky_blue">

    <RadioButton
        android:id="@+id/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:buttonTint="#807F7F"
        app:layout_constraintBottom_toTopOf="@+id/category_header"
        app:layout_constraintEnd_toStartOf="@+id/black"
        app:layout_constraintStart_toEndOf="@+id/purple"
        app:layout_constraintTop_toBottomOf="@+id/green" />

    <RadioButton
        android:id="@+id/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:buttonTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/category_header"
        app:layout_constraintEnd_toStartOf="@+id/white"
        app:layout_constraintStart_toEndOf="@+id/grey"
        app:layout_constraintTop_toBottomOf="@+id/light_blue" />

    <RadioButton
        android:id="@+id/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:buttonTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/black"
        app:layout_constraintTop_toBottomOf="@+id/dark_blue" />

    <RadioButton
        android:id="@+id/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="@+id/brown"
        app:layout_constraintEnd_toStartOf="@+id/grey"
        app:layout_constraintStart_toEndOf="@+id/pink"
        app:layout_constraintTop_toBottomOf="@+id/yellow" />

    <RadioButton
        android:id="@+id/pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#FF699C"
        app:layout_constraintBottom_toBottomOf="@+id/brown"
        app:layout_constraintEnd_toStartOf="@+id/purple"
        app:layout_constraintStart_toEndOf="@+id/brown"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <RadioButton
        android:id="@+id/brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="5dp"
        android:buttonTint="#714435"
        app:layout_constraintBottom_toTopOf="@+id/category_header"
        app:layout_constraintEnd_toStartOf="@+id/pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red" />

    <CheckBox
        android:id="@+id/shorts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="87dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/shorts"
        android:textColor="@color/black"
        android:buttonTint="@color/checkbox_selector"
        app:layout_constraintBottom_toTopOf="@+id/bag_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skirt"
        app:layout_constraintTop_toBottomOf="@+id/leggings" />

    <CheckBox
        android:id="@+id/jacket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/jacket"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/pants"
        app:layout_constraintEnd_toStartOf="@+id/dress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sweatshirt_sweater" />

    <TextView
        android:id="@+id/color_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/color"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/category"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tank_top_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pink" />

    <TextView
        android:id="@+id/season_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/season"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fall_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accessories_option" />

    <TextView
        android:id="@+id/in_laundry_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/in_laundry"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spring_option" />

    <Button
        android:id="@+id/filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@color/peri"
        android:fontFamily="@font/playfair_display"
        android:text="@string/apply_filter_button"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <CheckBox
        android:id="@+id/spring_option"
        android:layout_width="79dp"
        android:layout_height="30dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/spring"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toStartOf="@+id/summer_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fall_option" />

    <CheckBox
        android:id="@+id/summer_option"
        android:layout_width="96dp"
        android:layout_height="30dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/summer"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spring_option"
        app:layout_constraintTop_toBottomOf="@+id/winter_option" />

    <CheckBox
        android:id="@+id/fall_option"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:layout_marginStart="31dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/fall"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/summer_option"
        app:layout_constraintEnd_toStartOf="@+id/winter_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/winter_option" />

    <CheckBox
        android:id="@+id/winter_option"
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="77dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/winter"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/summer_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fall_option"
        app:layout_constraintTop_toBottomOf="@+id/accessories_option" />

    <CheckBox
        android:id="@+id/long_sleeve_blouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="77dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/long_sleeves_blouse"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sweatshirt_sweater"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_shirt_option" />

    <CheckBox
        android:id="@+id/sweatshirt_sweater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/sweatshirt_sweater"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/jacket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/long_sleeve_blouse" />

    <CheckBox
        android:id="@+id/pants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/pant"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/skirt"
        app:layout_constraintEnd_toStartOf="@+id/leggings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jacket" />

    <CheckBox
        android:id="@+id/t_shirt_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="67dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/t_shirt"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/long_sleeve_blouse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tank_top_option"
        app:layout_constraintTop_toBottomOf="@+id/grey" />

    <CheckBox
        android:id="@+id/bag_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/bag"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/accessories_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shoes_option"
        app:layout_constraintTop_toBottomOf="@+id/shorts" />

    <CheckBox
        android:id="@+id/leggings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/leggings"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/shorts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dress" />

    <CheckBox
        android:id="@+id/skirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="147dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/skirt"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/shoes_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pants" />

    <CheckBox
        android:id="@+id/shoes_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/shoes"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/accessories_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skirt" />

    <CheckBox
        android:id="@+id/tank_top_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/tank_top"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/long_sleeve_blouse"
        app:layout_constraintEnd_toStartOf="@+id/t_shirt_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_header" />

    <CheckBox
        android:id="@+id/dress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/dress"
        android:buttonTint="@color/checkbox_selector"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/leggings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sweatshirt_sweater" />

    <CheckBox
        android:id="@+id/accessories_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="5dp"
        android:buttonTint="@color/checkbox_selector"
        android:fontFamily="@font/playfair_display"
        android:text="@string/accessories"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/season_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bag_option" />

    <Button
        android:id="@+id/button2"
        android:layout_width="39dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/black"
        android:text="x"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:buttonTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/grey"
        app:layout_constraintEnd_toStartOf="@+id/light_blue"
        app:layout_constraintStart_toEndOf="@+id/yellow"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/light_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:buttonTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/black"
        app:layout_constraintEnd_toStartOf="@+id/dark_blue"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:buttonTint="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/purple"
        app:layout_constraintEnd_toStartOf="@+id/green"
        app:layout_constraintStart_toEndOf="@+id/orange"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/dark_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="12dp"
        android:buttonTint="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/white"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/light_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/in_laundry_header"
        app:layout_constraintTop_toBottomOf="@+id/summer_option" />

    <RadioButton
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="35dp"
        android:buttonTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/brown"
        app:layout_constraintEnd_toStartOf="@+id/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:buttonTint="#FF5722"
        app:layout_constraintBottom_toTopOf="@+id/pink"
        app:layout_constraintEnd_toStartOf="@+id/yellow"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>