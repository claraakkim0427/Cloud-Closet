<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/six_filter"
        android:layout_width="269dp"
        android:layout_height="364dp"
        android:layout_gravity="center"
        android:layout_marginStart="68dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="232dp"
        android:background="@color/sky_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/s_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:buttonTint="#807F7F"
            app:layout_constraintBottom_toTopOf="@+id/s_fall_option"
            app:layout_constraintEnd_toStartOf="@+id/s_black"
            app:layout_constraintStart_toEndOf="@+id/s_purple"
            app:layout_constraintTop_toBottomOf="@+id/s_green" />

        <RadioButton
            android:id="@+id/s_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:buttonTint="#000000"
            app:layout_constraintBottom_toTopOf="@+id/s_winter_option"
            app:layout_constraintEnd_toStartOf="@+id/s_white"
            app:layout_constraintStart_toEndOf="@+id/s_grey"
            app:layout_constraintTop_toBottomOf="@+id/s_light_blue" />

        <RadioButton
            android:id="@+id/s_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:buttonTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/s_brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/s_black"
            app:layout_constraintTop_toBottomOf="@+id/s_dark_blue" />

        <RadioButton
            android:id="@+id/s_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#9C27B0"
            app:layout_constraintBottom_toBottomOf="@+id/s_brown"
            app:layout_constraintEnd_toStartOf="@+id/s_grey"
            app:layout_constraintStart_toEndOf="@+id/s_pink"
            app:layout_constraintTop_toBottomOf="@+id/s_yellow" />

        <RadioButton
            android:id="@+id/s_pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FF699C"
            app:layout_constraintBottom_toBottomOf="@+id/s_brown"
            app:layout_constraintEnd_toStartOf="@+id/s_purple"
            app:layout_constraintStart_toEndOf="@+id/s_brown"
            app:layout_constraintTop_toBottomOf="@+id/s_orange" />

        <RadioButton
            android:id="@+id/s_brown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:buttonTint="#714435"
            app:layout_constraintBottom_toTopOf="@+id/s_season_header"
            app:layout_constraintEnd_toStartOf="@+id/s_pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_red" />

        <TextView
            android:id="@+id/s_color_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="200dp"
            android:fontFamily="@font/playfair_display"
            android:text="@string/color"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/s_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/s_season_header"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="210dp"
            android:fontFamily="@font/playfair_display"
            android:text="@string/season"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/s_fall_option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_brown" />

        <Button
            android:id="@+id/s_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:backgroundTint="@color/peri"
            android:fontFamily="@font/playfair_display"
            android:text="@string/apply_filter_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_spring_option" />

        <CheckBox
            android:id="@+id/s_spring_option"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="59dp"
            android:fontFamily="@font/playfair_display"
            android:text="@string/spring"
            app:layout_constraintBottom_toTopOf="@+id/s_filter_button"
            app:layout_constraintEnd_toStartOf="@+id/s_summer_option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_fall_option" />

        <CheckBox
            android:id="@+id/s_summer_option"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="59dp"
            android:fontFamily="@font/playfair_display"
            android:text="@string/summer"
            app:layout_constraintBottom_toTopOf="@+id/s_filter_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/s_spring_option"
            app:layout_constraintTop_toBottomOf="@+id/s_winter_option" />

        <CheckBox
            android:id="@+id/s_fall_option"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/playfair_display"
            android:text="@string/fall"
            app:layout_constraintBottom_toTopOf="@+id/s_spring_option"
            app:layout_constraintEnd_toStartOf="@+id/s_winter_option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_season_header" />

        <CheckBox
            android:id="@+id/s_winter_option"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/playfair_display"
            android:text="@string/winter"
            app:layout_constraintBottom_toTopOf="@+id/s_summer_option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/s_fall_option"
            app:layout_constraintTop_toBottomOf="@+id/s_grey" />

        <Button
            android:id="@+id/s_button2"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginBottom="318dp"
            android:backgroundTint="@color/black"
            android:text="x"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/s_dark_blue"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/s_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:buttonTint="#4CAF50"
            app:layout_constraintBottom_toTopOf="@+id/s_grey"
            app:layout_constraintEnd_toStartOf="@+id/s_light_blue"
            app:layout_constraintStart_toEndOf="@+id/s_yellow"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/s_light_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:buttonTint="#03A9F4"
            app:layout_constraintBottom_toTopOf="@+id/s_black"
            app:layout_constraintEnd_toStartOf="@+id/s_dark_blue"
            app:layout_constraintStart_toEndOf="@+id/s_green"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/s_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:buttonTint="#FFEB3B"
            app:layout_constraintBottom_toTopOf="@+id/s_purple"
            app:layout_constraintEnd_toStartOf="@+id/s_green"
            app:layout_constraintStart_toEndOf="@+id/s_orange"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/s_dark_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="12dp"
            android:buttonTint="#3F51B5"
            app:layout_constraintBottom_toTopOf="@+id/s_white"
            app:layout_constraintEnd_toStartOf="@+id/s_button2"
            app:layout_constraintStart_toEndOf="@+id/s_light_blue"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/s_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:buttonTint="@android:color/holo_red_dark"
            app:layout_constraintBottom_toTopOf="@+id/s_brown"
            app:layout_constraintEnd_toStartOf="@+id/s_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/s_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:buttonTint="#FF5722"
            app:layout_constraintBottom_toTopOf="@+id/s_pink"
            app:layout_constraintEnd_toStartOf="@+id/s_yellow"
            app:layout_constraintStart_toEndOf="@+id/s_red"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>